<!--
Install script
-->
<FILE Run="/bin/bash">
<INLINE>
<![CDATA[
#!/bin/bash

PLUGIN_NAME="tmuxai"
PLUGIN_DIR="/boot/config/plugins/${PLUGIN_NAME}"
INSTALL_DIR="/usr/local/bin"
CONFIG_DIR="/boot/config/plugins/${PLUGIN_NAME}/config"

# Create directories
mkdir -p "${PLUGIN_DIR}"
mkdir -p "${CONFIG_DIR}"

# Detect architecture
ARCH=$(uname -m)
case ${ARCH} in
  x86_64)
    TMUXAI_ARCH="Linux_amd64"
    ;;
  aarch64)
    TMUXAI_ARCH="Linux_arm64"
    ;;
  *)
    echo "Unsupported architecture: ${ARCH}"
    exit 1
    ;;
esac

# Download tmuxai archive
echo "Downloading tmuxai for ${TMUXAI_ARCH}..."
TMUXAI_VERSION="v2.1.0"
DOWNLOAD_URL="https://github.com/alvinunreal/tmuxai/releases/download/${TMUXAI_VERSION}/tmuxai_${TMUXAI_ARCH}.tar.gz"

# Try to download tmuxai archive
TEMP_DIR="${PLUGIN_DIR}/tmuxai_download"
TEMP_FILE="${TEMP_DIR}/tmuxai.tar.gz"
DOWNLOAD_SUCCESS=false
ERROR_LOG="${PLUGIN_DIR}/download_error.log"

# Create temporary directory
mkdir -p "${TEMP_DIR}"

if curl -L -f -o "${TEMP_FILE}" "${DOWNLOAD_URL}" 2>"${ERROR_LOG}"; then
  # Check if downloaded file is not empty and is a valid gzip archive
  if [ -s "${TEMP_FILE}" ]; then
    # Verify it's a gzip archive
    FILE_TYPE=$(file "${TEMP_FILE}" 2>/dev/null)
    if echo "${FILE_TYPE}" | grep -q "gzip compressed data"; then
      # Extract the archive
      echo "Extracting tmuxai archive..."
      if tar --no-same-owner -xzf "${TEMP_FILE}" -C "${TEMP_DIR}" 2>"${ERROR_LOG}"; then
        # Find the tmuxai binary in the extracted files
        TMUXAI_BINARY=$(find "${TEMP_DIR}" -name "tmuxai" -type f 2>/dev/null | head -n 1)
        if [ -n "${TMUXAI_BINARY}" ] && [ -f "${TMUXAI_BINARY}" ]; then
          # Verify it's an executable
          if file "${TMUXAI_BINARY}" 2>/dev/null | grep -q "ELF.*executable"; then
            mv "${TMUXAI_BINARY}" "${INSTALL_DIR}/tmuxai"
            chmod +x "${INSTALL_DIR}/tmuxai"
            DOWNLOAD_SUCCESS=true
            echo "Binary extraction and installation successful"
            rm -f "${ERROR_LOG}"
          else
            echo "Extracted file is not a valid ELF executable binary"
          fi
        else
          echo "Could not find tmuxai binary in extracted archive"
        fi
      else
        echo "Failed to extract archive"
        if [ -f "${ERROR_LOG}" ] && [ -s "${ERROR_LOG}" ]; then
          echo "Extraction error: $(cat "${ERROR_LOG}")"
        fi
      fi
    else
      echo "Downloaded file is not a valid gzip archive"
      echo "File type: ${FILE_TYPE}"
    fi
  else
    echo "Downloaded file was empty"
  fi
else
  echo "Failed to download tmuxai archive from GitHub releases"
  if [ -f "${ERROR_LOG}" ] && [ -s "${ERROR_LOG}" ]; then
    echo "Error details: $(cat "${ERROR_LOG}")"
  fi
fi

# Clean up temporary directory
rm -rf "${TEMP_DIR}"

# If binary download failed, try pip installation
if [ "$DOWNLOAD_SUCCESS" = false ]; then
  echo "Trying alternative installation method using pip..."
  
  if command -v pip3 &> /dev/null; then
    echo "Installing tmuxai using pip3..."
    if pip3 install tmuxai; then
      echo "Successfully installed tmuxai using pip3"
    else
      echo "ERROR: pip3 installation failed"
      exit 1
    fi
  elif command -v pip &> /dev/null; then
    echo "Installing tmuxai using pip..."
    if pip install tmuxai; then
      echo "Successfully installed tmuxai using pip"
    else
      echo "ERROR: pip installation failed"
      exit 1
    fi
  else
    echo "ERROR: Could not install tmuxai. Neither direct download nor pip available."
    exit 1
  fi
fi

# Verify installation
if command -v tmuxai &> /dev/null; then
  echo "tmuxai installed successfully!"
  tmuxai --version 2>/dev/null || echo "tmuxai is installed and ready to use"
else
  echo "WARNING: tmuxai installation completed but binary not found in PATH"
fi

# Create symlink for tmuxai config to persist across reboots
# tmuxai uses /root/.config/tmuxai by default, but this is not persisted in Unraid
# We create a symlink to /boot/config/plugins/tmuxai/config/.config/tmuxai
TMUXAI_CONFIG_DIR="/root/.config/tmuxai"
PERSISTED_CONFIG_DIR="${CONFIG_DIR}/.config/tmuxai"

# Create the persisted config directory
mkdir -p "${PERSISTED_CONFIG_DIR}"

# Remove /root/.config/tmuxai if it exists and is not a symlink
if [ -e "${TMUXAI_CONFIG_DIR}" ] && [ ! -L "${TMUXAI_CONFIG_DIR}" ]; then
  # If it's a directory with files, move them to the persisted location
  if [ -d "${TMUXAI_CONFIG_DIR}" ]; then
    echo "Moving existing tmuxai config to persisted storage..."
    cp -r "${TMUXAI_CONFIG_DIR}"/* "${PERSISTED_CONFIG_DIR}/" 2>/dev/null || true
  fi
  rm -rf "${TMUXAI_CONFIG_DIR}"
fi

# Create parent directory if it doesn't exist
mkdir -p /root/.config

# Create symlink if it doesn't exist
if [ ! -L "${TMUXAI_CONFIG_DIR}" ]; then
  ln -s "${PERSISTED_CONFIG_DIR}" "${TMUXAI_CONFIG_DIR}"
  echo "Created symlink: ${TMUXAI_CONFIG_DIR} -> ${PERSISTED_CONFIG_DIR}"
fi

# Create a simple configuration file
cat > "${CONFIG_DIR}/README.txt" << 'EOF'
TmuxAI Configuration
====================

To use tmuxai, you need to set up your AI provider credentials.

Supported providers:
- OpenAI (ChatGPT)
- Anthropic (Claude)
- Google (Gemini)
- Other OpenAI-compatible APIs

Setup:
1. Set your API key as an environment variable:
   export OPENAI_API_KEY="your-api-key-here"
   
   Or for other providers:
   export ANTHROPIC_API_KEY="your-api-key-here"

2. Use tmuxai in your tmux sessions:
   - Press prefix + C (capital C) to ask AI a question
   - Or run: tmuxai ask "your question"

Configuration Files:
- tmuxai config is stored in: /boot/config/plugins/tmuxai/config/.config/tmuxai
- A symlink is created at: /root/.config/tmuxai -> /boot/config/plugins/tmuxai/config/.config/tmuxai
- This ensures your configuration persists across Unraid reboots

For more information, visit: https://github.com/alvinunreal/tmuxai
EOF

echo "TmuxAI plugin installation complete!"
echo "Config location (persisted): ${PERSISTED_CONFIG_DIR}"
echo "Symlink created at: ${TMUXAI_CONFIG_DIR}"
echo "See ${CONFIG_DIR}/README.txt for configuration instructions."

]]>
</INLINE>
</FILE>

<!--
Remove script
-->
<FILE Run="/bin/bash" Method="remove">
<INLINE>
<![CDATA[
#!/bin/bash

PLUGIN_NAME="tmuxai"
INSTALL_DIR="/usr/local/bin"
TMUXAI_CONFIG_SYMLINK="/root/.config/tmuxai"

# Remove tmuxai binary
if [ -f "${INSTALL_DIR}/tmuxai" ]; then
  rm -f "${INSTALL_DIR}/tmuxai"
  echo "Removed tmuxai binary"
fi

# Try to uninstall if it was installed via pip
if command -v pip3 &> /dev/null; then
  pip3 uninstall -y tmuxai 2>/dev/null || true
fi

if command -v pip &> /dev/null; then
  pip uninstall -y tmuxai 2>/dev/null || true
fi

# Remove symlink if it exists
if [ -L "${TMUXAI_CONFIG_SYMLINK}" ]; then
  rm -f "${TMUXAI_CONFIG_SYMLINK}"
  echo "Removed config symlink: ${TMUXAI_CONFIG_SYMLINK}"
fi

# Note: We keep the config directory in /boot/config/plugins/tmuxai
# so user settings persist across plugin reinstalls
echo "TmuxAI plugin removed successfully!"
echo "Configuration preserved in /boot/config/plugins/${PLUGIN_NAME}"

]]>
</INLINE>
</FILE>

